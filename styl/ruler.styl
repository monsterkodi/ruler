.lines
    position            relative
    overflow            visible

.lines.horizontal
    height              100%
    width               100%
    
.lines.vertical
    width               100%
    height              100%

.line
    position            absolute
    overflow            visible

.line.horizontal
    bottom              0
    width               1px
    height              (rulerSize / 5)
    &._10
        height          (rulerSize / 4)
    &._50
        height          (rulerSize / 3)
    &.needle
    &._100
        height          (rulerSize / 3)    
    &.cursor
        height          11px
        top             -5px

.line.vertical
    right 0
    height              1px
    width               (rulerSize / 5)
    &._10
        width           (rulerSize / 4)
    &._50
        width           (rulerSize / 3)
    &.needle
    &._100
        width           (rulerSize / 3)
    &.cursor
        width           11px
        left            -5px 

.horizontal .num    
    text-align          center
    margin-top          - 13px
    width               100px
    margin-left         -50px

.vertical .num    
    text-align          center
    margin-left         - 13px
    height              100px
    margin-top          -50px
    writing-mode        vertical-lr

