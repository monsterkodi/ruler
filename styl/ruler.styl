.ruler
    fill-abs()
    cursor              pointer    
    pointer-events      all
    overflow            hidden
    background          #222
    -webkit-app-region  drag
    
#horz
    max-height          rulerSize
    margin-left         rulerSize
#vert
    margin-top          rulerSize
    max-width           rulerSize

