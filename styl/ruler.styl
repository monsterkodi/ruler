.lines
    position            relative
    overflow            visible

.lines.horizontal
    height              100%
    width               100%
    
.lines.vertical
    width               100%
    height              100%

.line
    position            absolute
    overflow            visible

.ruler .line.horizontal
    bottom              0

.ruler .line.vertical
    right               0

.line.horizontal
    width               1px
    height              (rulerSize / 5)
    &._10
        height          (rulerSize / 4)
    &._50
        height          (rulerSize / 3)
    &.needle
    &._100
        height          (rulerSize / 3)    
    &.cursor
        left            0
        height          17px
        top             -8px

.line.vertical
    height              1px
    width               (rulerSize / 5)
    &._10
        width           (rulerSize / 4)
    &._50
        width           (rulerSize / 3)
    &.needle
    &._100
        width           (rulerSize / 3)
    &.cursor
        top             0
        width           17px
        left            -8px 

