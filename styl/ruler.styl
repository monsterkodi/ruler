.handle
    position            absolute
    background          white

.border
    position            absolute
    background          rgba(128,128,128,0.25)
    
.right
    right               0
    width               1px
    
.right.handle
    top                 (rulerSize / 2)
    height              (rulerSize / 2)

.right.border
    top                 rulerSize
    bottom              0
    
.bottom
    bottom              0
    height              1px

.bottom.handle
    left                (rulerSize / 2)
    width               (rulerSize / 2)

.bottom.border
    left                rulerSize
    right               0

