*
    outline-width       0
    box-sizing          border-box
    
body
    fill-abs()
    margin              0
    background          rgba(128,128,128,0.1)
    box-sizing          border-box
    border              none
    overflow            hidden
    font-family         font
    font-size           10px
    -webkit-user-select none
    -webkit-app-region  no-drag
    // cursor              crosshair    

