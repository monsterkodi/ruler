#ctrl
    position            absolute
    cursor              pointer    
    -webkit-app-region  drag        
    background-size     80% 80%
    background-position 50% 50%
    background-repeat   no-repeat    
    overflow            hidden
    pointer-events      all
    width               rulerSize
    height              rulerSize
    
